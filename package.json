{
  "name": "@simpli/vue-adap-table",
  "version": "1.2.4",
  "description": "A Vue adaptable table, many components to be used to render and control lists",
  "keywords": [],
  "main": "lib/index.js",
  "module": "lib/index.js",
  "typings": "lib/index.d.ts",
  "author": "gil <gil.bueno@simpli.com.br>",
  "es2015": "lib-esm/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/simplitech/vue-adap-table"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.9"
  },
  "scripts": {
    "cleanup": "shx rm -rf umd lib lib-esm types coverage",
    "prebuild": "npm run cleanup && npm run verify",
    "build": " tsc && tsc --target es2017 --outDir lib-esm && webpack",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:only-changed": "npm test -- --bail --onlyChanged",
    "ts:lint": "tslint --project tsconfig.json --format codeFrame",
    "ts:lint:fix": "npm run ts:lint -- --fix",
    "ts:format:base": "npm run prettier:ts -- src/**/*.ts",
    "ts:format": "npm run ts:format:base -- --list-different",
    "ts:format:fix": "npm run ts:format:base -- --write",
    "ts:style": "npm run ts:format && npm run ts:lint",
    "ts:style:fix": "npm run ts:format:fix && npm run ts:lint:fix",
    "verify": "npm run ts:style && npm test",
    "cz": "git-cz",
    "prettier:ts": "prettier --single-quote --print-width 120 --trailing-comma es5 --no-semi --parser typescript",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm run ts:style && npm run test:only-changed",
    "prerelease": "npm run build",
    "release": "standard-version",
    "postrelease": "npm run release:github && npm run release:npm",
    "release:github": "git push --no-verify --follow-tags origin master",
    "release:npm": "npm publish",
    "release:preflight": "irish-pub",
    "release:preflight:package": "npm pack"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "maxSubjectLength": 120
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run prettier:ts -- --write",
      "npm run ts:lint:fix",
      "git add"
    ]
  },
  "dependencies": {
    "css-element-queries": "^1.2.3",
    "lodash.debounce": "^4.0.8",
    "vue": "^2.6.10",
    "vue-class-component": "^7.1.0",
    "vue-property-decorator": "^9.1.0"
  },
  "peerDependencies": {
    "@simpli/resource-collection": "file:../resource-collection",
    "@simpli/vue-await": ">=1.0.5",
    "class-transformer": ">=0.5.1",
    "simple-line-icons": ">=2.5.5",
    "swiper": ">=8.4.6",
    "vue-awesome-swiper": ">=5.0.1",
    "vue-transition-expand": ">=0.1.0"
  },
  "devDependencies": {
    "@simpli/resource-collection": "../resource-collection",
    "@simpli/vue-await": "^1.0.5",
    "@types/jest": ">=29.2.6",
    "@types/node": ">=18.11.18",
    "class-transformer": "0.3.1",
    "commitizen": "4.0.3",
    "cross-var": ">=1.1.0",
    "css-loader": ">=6.7.3",
    "cz-conventional-changelog": ">=3.3.0",
    "gzip-size-cli": ">=5.1.0",
    "hoek": ">=6.1.3",
    "husky": ">=8.0.3",
    "jest": "^29.4.0",
    "jest-serializer-vue": ">=3.1.0",
    "lint-staged": "7.3.0",
    "mini-css-extract-plugin": ">=2.7.2",
    "node-sass": ">=8.0.0",
    "prettier": ">=2.8.3",
    "raw-loader": ">=4.0.2",
    "sass-loader": ">=13.2.0",
    "shx": ">=0.3.4",
    "simple-line-icons": "^2.4.1",
    "standard-version": "5.0.2",
    "strip-json-comments-cli": ">=2.0.2",
    "swiper": "^8.4.6",
    "ts-jest": ">=29.0.5",
    "ts-loader": ">=9.4.2",
    "tslint": ">=6.1.3",
    "tslint-config-prettier": ">=1.18.0",
    "tslint-config-standard": ">=9.0.0",
    "tslint-react": ">=5.0.0",
    "typescript": ">=4.9.4",
    "validate-commit-msg": "2.14.0",
    "vue-awesome-swiper": "^5.0.1",
    "vue-jest": ">=3.0.7",
    "vue-loader": ">=17.0.1",
    "vue-template-compiler": ">=2.6.10",
    "vue-transition-expand": "^0.1.0",
    "webpack": ">=5.75.0",
    "webpack-cli": ">=5.0.1"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  }
}